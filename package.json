{
  "name": "@grahas/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "pnpm exec nx run-many --target=lint --exclude='*-e2e'",
    "lint:fix": "pnpm exec nx run-many --target=lint --exclude='*-e2e' -- --fix",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache --ignore-path .prettierignore",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache --ignore-path .prettierignore",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "*.{jsx,js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "next": "~15.1.6",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.19.0",
    "@nx/cypress": "20.4.0",
    "@nx/eslint": "20.4.0",
    "@nx/eslint-plugin": "20.4.0",
    "@nx/jest": "20.4.0",
    "@nx/js": "20.4.0",
    "@nx/next": "20.4.0",
    "@nx/workspace": "20.4.0",
    "@swc-node/register": "~1.9.2",
    "@swc/core": "~1.5.29",
    "@swc/helpers": "~0.5.15",
    "@testing-library/react": "16.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "18.16.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@typescript-eslint/parser": "^8.22.0",
    "autoprefixer": "10.4.13",
    "babel-jest": "^29.7.0",
    "cypress": "^13.17.0",
    "eslint": "^9.19.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "14.2.16",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-compiler": "19.0.0-beta-27714ef-20250124",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nx": "20.4.0",
    "postcss": "8.4.38",
    "prettier": "^3.4.2",
    "tailwindcss": "3.4.3",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.1",
    "tslib": "^2.8.1",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.22.0"
  }
}
